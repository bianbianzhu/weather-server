  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Current File",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "args": ["${relativeFile}"],
      "runtimeExecutable": "tsx",
      "runtimeArgs": ["--experimental-wasm-modules", "-r", "dotenv/config"]
    }
  ]
}
